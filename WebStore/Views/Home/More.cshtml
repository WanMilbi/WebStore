@model WebStore.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"></link>
    <title>More</title>
</head>
<body>
<h3>Дополнительная информация</h3>
<table class="table">
    <thead class="p-3 mb-2 bg-info text-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Фамилия</th>
        <th scope="col">Имя</th>
        <th scope="col">Отчество</th>
        <th scope="col">Возраст</th>
    </tr>
    <tbody>
    <tr scope="row">
        <th>@Model.Id</th>
        <th>@Model.LastName</th>
        <th>@Model.FirstName</th>
        <th>@Model.Patronymic</th>
        <th>@Model.Age</th>
    </tr>   
    </tbody>
</table>
    <a asp-controller="Home" asp-action="Employees">Сотрудники</a>
</body>
</html>
