@model IEnumerable<WebStore.Models.Employee>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Employees</title>
</head>
<body>
<h3>Сотрудники</h3>
<table class="table">
    <thead class="p-3 mb-2 bg-info text-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Фамилия</th>
        <th scope="col">Имя</th>
        <th scope="col">Отчество</th>
        <th scope="col">Возраст</th>
        <th scope="col">Доп. информация</th>
    </tr>
    <tbody>
    @foreach (var employee in Model)
    {
        <tr scope="row">
            <th>@employee.Id</th>
            <th>@employee.LastName</th>
            <th>@employee.FirstName</th>
            <th>@employee.Patronymic</th>
            <th>@employee.Age</th>
            <th><a asp-controller="Home" asp-action="More" asp-route-id="@employee.Id">Детали</a></th>
        </tr>   
    }
    </tbody>
</table>
    <a asp-controller="Home" asp-action="Index">Домой</a>
</body>
</html>
